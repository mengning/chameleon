<html>
  <head>
    <title>A simplified bank.</title>
  </head>

  <body>
    <form name="loginform" method="POST">
      <table>
	<tr>
	  <td>Username:</td>
	  <td><input type="text" 
		     name="login_username" 
		     size="20"
		     autocomplete="no">
	  </td>
	</tr>
	<tr>
	  <td>Password:</td>
	  <td><input type="password" 
		     name="login_password" 
		     size="20" 
		     autocomplete="no">	  
	  </td>
	</tr>
	<tr>
	  <td>&nbsp;</td>
	  <td>
	    <input type="submit" 
		   name="submit_login" 
		   value="Login">
	    <input type="submit" 
		   name="submit_registration" 
		   value="Register">
	  </td>
	</tr>
      </table>
      
    </form>
    

    
  </body>
  
</html>
